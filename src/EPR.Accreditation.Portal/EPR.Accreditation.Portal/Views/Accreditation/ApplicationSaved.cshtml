@model ApplicationSavedViewModel;
@using EPR.Accreditation.Portal.Resources;
@using EPR.Accreditation.App.ViewModels;

@{
    ViewData["Title"] = @ApplicationSavedResources.PageTitle;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    @ApplicationSavedResources.BannerTitle
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <h3 class="govuk-notification-banner__heading">
                    @ApplicationSavedResources.BannerHeading
                </h3>
                <p class="govuk-body">
                    @Model.DateAndTime
                </p>
            </div>
        </div>
        <p class="govuk-body">
            @ApplicationSavedResources.ParagraphTextP1 @Model.ApplicationExpiry @ApplicationSavedResources.ParagraphTextP2
        </p>
    </div>
</div>
<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <a href="/" class="govuk-button">@ApplicationSavedResources.BtnText</a>
    </div>
</div>